<controls:MetroContentControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:miSharp="clr-namespace:MiSharp"
    x:Class="MiSharp.LibraryView"
    mc:Ignorable="d" d:DesignWidth="850" d:DesignHeight="550">
    <controls:MetroContentControl.Resources>
        <ResourceDictionary>
            <miSharp:FirstLetterConverter x:Key="firstLetterConverter" />
            <CollectionViewSource Source="{Binding Bands}" x:Key="GroupedBands">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription PropertyName="Name" Converter="{StaticResource firstLetterConverter}"/>
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>

        </ResourceDictionary>
    </controls:MetroContentControl.Resources>
    <Grid>
        <ListView ItemsSource="{Binding Songs}" SelectionMode="Single" SelectedItem="{Binding SelectedSong}"
                 Margin="254,193,10,10">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add to Now Playing" Visibility="Visible" cal:Message.Attach="[Event Click] = [Action AddSongToPlaylist()]"/>
                    <Separator />
                    <MenuItem Header="Edit Song Information" cal:Message.Attach="[Event Click] = [Action EditorEditSongs()]"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Margin="0,0,0,0">
                        <StackPanel Margin="10,0,0,0" Orientation="Vertical" VerticalAlignment="Center"
                                    HorizontalAlignment="Left">
                            <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" Text="{Binding Title}" />
                            <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" Text="{Binding Track}" />
                            <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" Text="{Binding BeatsPerMinute}" />
                            <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" Text="{Binding Year}" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView ItemsSource="{Binding Albums}" SelectedItem="{Binding SelectedAlbum}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="254,10,10,0" Height="178"
                 VerticalAlignment="Top">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add to Now Playing" Visibility="Visible">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <cal:ActionMessage MethodName="AddAlbumToPlaylist" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </MenuItem>
                    <MenuItem Header="Replace now playing with selection" Visibility="Hidden" />
                    <Separator />
                    <MenuItem Header="Playlists" Visibility="Hidden">
                        <MenuItem Header="Add to New Playlist" />
                        <MenuItem Header="Add to Playlist" />
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Edit Album Information">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <cal:ActionMessage MethodName="EditorEditAlbums" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Delete" Visibility="Hidden">
                        <MenuItem Header="Delete from Library" />
                        <MenuItem Header="Delete from Library and Computer" />
                    </MenuItem>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" ItemWidth="300" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="280">
                        <Image Height="70" Width="70" Source="{Binding Image}" />
                        <StackPanel Margin="10,0,0,0" Orientation="Vertical" VerticalAlignment="Center"
                                    HorizontalAlignment="Left">
                            <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" Text="{Binding Name}" />
                            <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" Text="{Binding Year}" />
                        </StackPanel>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListView>
        <ListView ItemsSource="{Binding Source={StaticResource GroupedBands}}" SelectedItem="{Binding SelectedBand}" HorizontalAlignment="Left" Margin="10,10,0,10" Width="239">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add to Now Playing" Visibility="Visible">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <cal:ActionMessage MethodName="AddArtistToPlaylist" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </MenuItem>
                    <MenuItem Header="Replace now playing with selection" Visibility="Hidden" />
                    <Separator />
                    <MenuItem Header="Playlists" Visibility="Hidden">
                        <MenuItem Header="Add to New Playlist" />
                        <MenuItem Header="Add to Playlist" />
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Edit Artist Information">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <cal:ActionMessage MethodName="EditorEditArtists" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Delete" Visibility="Hidden">
                        <MenuItem Header="Delete from Library" />
                        <MenuItem Header="Delete from Library and Computer" />
                    </MenuItem>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="GroupItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" FontSize="13" Text="{Binding Path=Name}" Background="#FFB9B9B9" Foreground="White" />
                                            <ItemsPresenter/>
                                        </StackPanel>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel  Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0">
                        <Image Source="{Binding Cover}" Width="40" Height="40"/>
                        <StackPanel Margin="10,0,0,0" Orientation="Vertical" VerticalAlignment="Center"
                                    HorizontalAlignment="Left">
                            <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" Text="{Binding Name}" />
                            <TextBlock TextWrapping="Wrap" VerticalAlignment="Center">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} songs / {1} albums">
                                        <Binding Path="SongsCount" />
                                        <Binding Path="AlbumsCount" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</controls:MetroContentControl>