<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:miSharp="clr-namespace:MiSharp"
    xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    x:Class="MiSharp.ArtistNavigationView" TextOptions.TextFormattingMode="Display"
    mc:Ignorable="d" d:DesignWidth="850" d:DesignHeight="550">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <miSharp:FirstLetterConverter x:Key="firstLetterConverter" />
                    <CollectionViewSource Source="{Binding Bands}" x:Key="GroupedBands">
                        <CollectionViewSource.SortDescriptions>
                            <componentModel:SortDescription PropertyName="Model.Name" />
                        </CollectionViewSource.SortDescriptions>

                        <CollectionViewSource.GroupDescriptions>
                            <PropertyGroupDescription PropertyName="Model.Name"
                                                      Converter="{StaticResource firstLetterConverter}" />
                        </CollectionViewSource.GroupDescriptions>
                    </CollectionViewSource>
                </ResourceDictionary>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary
                    Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.Buttons.xaml" />
                        <ResourceDictionary
                    Source="pack://application:,,,/MiSharp;component/Resources/Icons.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <Canvas Width="48" Height="48" Clip="F1 M 0,0L 48,0L 48,48L 0,48L 0,0" UseLayoutRounding="False"
        		x:Key="appbar_arrow_left">
                <Path Width="25" Height="18" Canvas.Left="11" Canvas.Top="15" Stretch="Fill"
        			Fill="{DynamicResource BlackBrush}"
        			Data="F1 M 36,22L 36,26L 19.75,26L 27,33L 20.5,33L 11,24L 20.5,15L 27,15L 19.75,22L 36,22 Z " />
            </Canvas>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ListView Grid.Row="1" ItemsSource="{Binding Source={StaticResource GroupedBands}, IsAsync=True}"
                  SelectedItem="{Binding SelectedBand}" Grid.Column="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="{x:Null}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel ItemWidth="150" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="GroupItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" FontSize="16" Text="{Binding Path=Name}"
                                                       Foreground="#FF898989" />
                                            <ItemsPresenter />
                                        </StackPanel>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <miSharp:ArtistView Width="Auto" DataContext="{Binding}"
                                        cal:Message.Attach="[Event MouseDoubleClick]=[Action ActivateAlbum()]" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Grid.Row="0" Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left"
        	VerticalAlignment="Top" Width="45" Height="45" IsEnabled="False">
            <Rectangle Width="20" Height="16" StrokeThickness="7">
                <Rectangle.Fill>
                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_arrow_left}" />
                </Rectangle.Fill>
            </Rectangle>
        </Button>
    </Grid>
</UserControl>