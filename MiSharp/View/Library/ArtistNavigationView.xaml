<controls:MetroContentControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:miSharp="clr-namespace:MiSharp"
    xmlns:system="clr-namespace:System;assembly=mscorlib" xmlns:library="clr-namespace:MiSharp"
    xmlns:tagEditor="clr-namespace:MiSharp"
    x:Class="MiSharp.ArtistNavigationView" TextOptions.TextFormattingMode="Display"
    mc:Ignorable="d" d:DesignWidth="850" d:DesignHeight="550">
    <controls:MetroContentControl.Resources>
        <ResourceDictionary>
            <miSharp:FirstLetterConverter x:Key="firstLetterConverter" />
            <CollectionViewSource Source="{Binding Bands}" x:Key="GroupedBands">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription PropertyName="Name" Converter="{StaticResource firstLetterConverter}" />
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
        </ResourceDictionary>
    </controls:MetroContentControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ListView Grid.Row="1" ItemsSource="{Binding Source={StaticResource GroupedBands}, IsAsync=True}"
                  SelectedItem="{Binding SelectedBand}" Grid.Column="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel ItemWidth="150" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="GroupItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" FontSize="16" Text="{Binding Path=Name}"
                                                       Foreground="#FF898989" />
                                            <ItemsPresenter />
                                        </StackPanel>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <miSharp:ArtistView Width="Auto" DataContext="{Binding}"
                                        cal:Message.Attach="[Event MouseDoubleClick]=[Action ActivateAlbum()]" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Grid.Row="0" Content="Back to Artists" HorizontalAlignment="Left" Margin="10,10,0,0"
                VerticalAlignment="Top" Width="104" Height="35" cal:Message.Attach="ToArtists()" />
    </Grid>
</controls:MetroContentControl>